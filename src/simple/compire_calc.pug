                        section.solution 
                            h1.solution_title Онлайн проверка взаимно простых чисел
                            span.solution_instruction Введите ваши числа:
                            .solution_input
                                input(type="text" placeholder = "Введите число" required autofocus)
                                input(type="text" placeholder = "Введите число" required)
                            .calculate 
                                .message_error Введите значения в поле выше
                            .solution_result 
                                span Ответ:
                                input(type="text")
                            .keys#keys 
                                .keys_answer 
                                    button(name="Enter") Проверить
                                .numbers 
                                    button(name="1") 1
                                    button(name="2") 2
                                    button(name="3") 3
